doctype html

#processor-edit
    md-dialog.compose-dialog(aria-label='New Processor')

        md-toolbar.md-accent.md-hue-2
            .md-toolbar-tools(layout='row', layout-align='space-between center')
                span.title(
                    ng-if='vm.mode == "create"'
                    translate='PROCESSOR.NEW_PROCESSOR'
                ) New Processor
                span.title(
                    ng-if='vm.mode == "update"'
                    translate='PROCESSOR.UPDATE_PROCESSOR'
                ) Update Processor
                md-button.md-icon-button(
                    ng-click='vm.cancel()'
                    aria-label='Close dialog'
                    tranlate, translate-aria-label='PROCESSOR.CLOSE_DIALOG'
                )
                    md-icon(md-font-icon='icon-close')

        md-dialog-content(ms-scroll)
            form(
                name='processorForm'
                ng-submit='vm.confirm()'
                ng-model='vm.verticalStepper'
                ms-vertical-stepper
                novalidate
            )
                ms-vertical-stepper-step(
                    ng-form='basicInfo'
                    step='1'
                    step-title="'Basic Information'"
                    step-title-translate="'PROCESSOR.EDIT.BASIC_INFO'"
                )
                    include ./forms/basic-info.pug

                ms-vertical-stepper-step(
                    ng-form='associatedInfo'
                    step='2'
                    step-title="'Associated Information'"
                    step-title-translate="'PROCESSOR.EDIT.ASSOCIATED_INFO'"
                )
                    include ./forms/associated-info.pug

                ms-vertical-stepper-step(
                    ng-form='channels'
                    step='3'
                    step-title="'Channels'"
                    step-title-translate="'PROCESSOR.EDIT.CHANNELS'"
                )
                    include ./forms/channel.pug
